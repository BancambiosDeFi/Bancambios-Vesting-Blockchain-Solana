{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    //"declaration": true,
    "outDir": "./dist",                          
    "rootDir": "src",                 
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,

    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowJs": true
  },
  "exclude": ["node_modules", "dist","docs"]
}